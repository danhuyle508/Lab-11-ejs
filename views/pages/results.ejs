<% include ../partials/header.ejs %>
  <body>
    <% include ../partials/nav-bar.ejs %>
    <main>
      <h3>Results of your search:</h3>
      <div class="container">
        <% mapResults.forEach((book) => { %>
          <div class="eachBook">
            <%- include('./books/show', {book}); %>
            <p><%= book.description %></p>
            <button type="button" class="selectBook" data-isbn="<%= book.isbn %>">
              Select This Book
            </button>
            <%- include('../partials/form.ejs', {
              book: book, 
              bookshelves: bookshelves, 
              formAction: `/books`, 
              method: 'post',
              buttonText: 'Add to Database'
            }) %>
          </div> 
        <% }) %>
      </div>   
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="./js/app.js"></script>
  </body>
</html>